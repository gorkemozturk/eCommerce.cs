@model eCommerce.cs.Data.Entities.ProductType
@{
    ViewData["Title"] = "Product Types";
}

<div class="panel panel-default">
    <div class="panel-heading text-center">
        EDIT EXISTING PRODUCT TYPE
    </div>
    <div class="panel-body">
        <form method="post" asp-action="Edit" class="form-horizontal">
            <div class="form-group">
                <input type="hidden" asp-for="ProductID" />
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <label asp-for="ProductName" class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                    <input asp-for="ProductName" class="form-control" autocomplete="off">
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <a asp-action="Index" class="btn btn-default">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                        Back
                    </a>
                    <button asp-route-id="@Model.ProductID" value="Update" type="submit" class="btn btn-success">
                        <span class="glyphicon glyphicon-plus-sign"></span>
                        Save It
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts
    {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}