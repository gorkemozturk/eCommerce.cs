@model eCommerce.cs.Data.Entities.SpecialTag
@{
    ViewData["Title"] = "Special Tags";
}

<div class="panel panel-default">
    <div class="panel-heading text-center">
        DETAILS THE EXISTING PRODUCT TYPE
    </div>
    <div class="panel-body">
        <form class="form-horizontal">
            <div class="form-group">
                <label asp-for="TagName" class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                    <input asp-for="TagName" class="form-control" disabled autocomplete="off">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <a asp-action="Index" class="btn btn-default">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                        Back to List
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model.TagID" type="submit" class="btn btn-success">
                        Edit
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>